
@{
    Layout = null;
}

<div class="navbar-inner  bg-warning-subtle bg-gradient">
    <div class="container-fluid ">
        <nav class="navbar navbar-expand-lg ">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @{
                    var allCategories = ViewBag.NavCategories as List<FurnitureShop.Areas.Administration.Data.DisplayCategoryViewModel>;
                }
                <ul class="navbar-nav  ml-auto text-center mr-auto">
                    @if (allCategories != null)
                    {

                        foreach (var Category in allCategories)
                        {

                            <li class="ulli nav-item dropdown mr-lg-2  mb-2">
                                <div>
                                    @if (Category.mainCategoryImage != null)
                                    {

                                        <img src="@Url.Content(Category.mainCategoryImage)" height="60" width="60" alt="Alternate Text" />
                                    }
                                </div>
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @Category.mainCategoryName
                                </a>
                                <div class="dropdown-menu">
                                    <div class="agile_inner_drop_nav_info p-4">
                                        <div class="row">
                                            <div class="col-12 multi-gd-img">
                                                <ul class="multi-column-dropdown">
                                                    @foreach (var subCategory in Category.subCategory)
                                                    {
                                                        <li>
                                                         @Html.ActionLink(subCategory.subCatName,"FilterByCategory","Home", new { categoryId = subCategory.subCatId },null)
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
    </div>
</div>
@model FurnitureShop.Areas.Administration.Data.MainCategoryViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "MainCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MainCategoryViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MainCategoryId)

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.MainCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MainCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @if (Model.MainCategoryImage != null)
            {

                <img src="@Url.Content(Model.MainCategoryImage)" style="width:200px; height:200px">
            }
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="form-control" id="formFile" />
                @Html.HiddenFor(model => model.MainCategoryImage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MainCategoryImage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

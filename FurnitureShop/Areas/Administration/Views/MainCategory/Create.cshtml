@model FurnitureShop.Areas.Administration.Data.MainCategoryViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";

}


<div class="card p-5">
    <div class="card-header">
        <h2>Create Main Category</h2>
    </div>
  

        @using (Html.BeginForm("Create", "MainCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class = "control-label col-md-2" >Category Name</label>                    
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MainCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MainCategoryName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-8">
                    <label class="control-label col-md-2">Image</label>
                    <div class="col-md-10">
                        <input type="file" name="ImageFile" class="form-control" id="formFile" />
                        @Html.ValidationMessageFor(model => model.MainCategoryImage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    
    <div class="card-footer">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>



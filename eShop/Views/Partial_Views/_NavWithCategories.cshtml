@{
    var allCategories = ViewBag.NavCategories as List<FurnitureShop.Areas.Administration.Data.DisplayCategoryViewModel>;
}

<div class="cat-mob">
    @if (allCategories != null)
    {
        <div class="ecatdiv">
            <a href="@Url.Action()">
                <div class="c1img1">
                    <img src="~/Images/Utilities/No-Image-Placeholder.svg.png" height="60" width="60" alt="" />
                </div>
                <div class="t12">
                   Categories
                </div>
            </a>
        </div>

        foreach (var category in allCategories)
        {
            <div class="ecatdiv">
                <a href="@Url.Action()">
                    <div class="c1img1">
                        <img src="@Url.Content(category.mainCategoryImage)" height="60" width="60" alt="@category.mainCategoryName" />
                    </div>
                    <div class="t12">
                        @category.mainCategoryName
                    </div>
                </a>

            </div>
        }
    }
</div>
<div class="navbar-inner p-2 bg-warning-subtle  cat-com" style="background-color: #eaeaea">
    <div class="innerBox">
        <nav class="navbar navbar-expand-lg bg-white">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="25" height="25   " viewBox="0 0 50 50">
                        <path d="M 5 8 A 2.0002 2.0002 0 1 0 5 12 L 45 12 A 2.0002 2.0002 0 1 0 45 8 L 5 8 z M 5 23 A 2.0002 2.0002 0 1 0 5 27 L 45 27 A 2.0002 2.0002 0 1 0 45 23 L 5 23 z M 5 38 A 2.0002 2.0002 0 1 0 5 42 L 45 42 A 2.0002 2.0002 0 1 0 45 38 L 5 38 z"></path>
                    </svg>
                </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              
                <ul class="navbar-nav  ml-auto text-center mr-auto">
                    @if (allCategories != null)
                    {

                        foreach (var Category in allCategories)
                        {

                            <li class="ulli nav-item dropdown ">

                                <div>
                                    @if (Category.mainCategoryImage != null)
                                    {

                                        <img src="@Url.Content(Category.mainCategoryImage)" height="64" width="64" alt="Alternate Text" />
                                    }

                                    <div class="categoryName">
                                        <a class="nav-link " href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                            @Category.mainCategoryName
                                            <span style="height:23px;width:23px; margin:0">
                                                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g id="Arrow / Caret_Down_MD"> <path id="Vector" d="M16 10L12 14L8 10" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g> </g></svg>
                                            </span>
                                        </a>
                                    </div>
                                </div>

                                <div class="dropdown-menu m-0">
                                    <div class="agile_inner_drop_nav_info p-3">
                                        <div class="row">
                                            <div class="col-12 multi-gd-img">
                                                <ul class="multi-column-dropdown">
                                                    @foreach (var subCategory in Category.subCategory)
                                                    {
                                                        <li>
                                                            @Html.ActionLink(subCategory.subCatName, "FilterByCategory", "Home", new { categoryId = subCategory.subCatId }, null)
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
    </div>
</div>
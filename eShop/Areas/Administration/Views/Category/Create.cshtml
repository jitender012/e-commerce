@model FurnitureShop.Areas.Administration.Data.CreateCategoryViewModel

@{
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.IsSuccess != null)
{
    <h4 style="color:green">@ViewBag.IsSuccess</h4>
}

<div class="container p-5">

    @using (Html.BeginForm("Create", "ManageCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ">
            <h4>Create Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.category_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.category_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.category_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.mainCategoryId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.mainCategoryId, (SelectList)ViewBag.CategoryList, "Select Main Category", new { @class = "form-control" })

                    @*@Html.EditorFor(model => model.category_id, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.category_img, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="ImageFile" class="form-control" id="formFile" />
                    @Html.ValidationMessageFor(model => model.category_img, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <br />
    <div>
        @Html.ActionLink("Back to List", "Index", "ManageCategory")
    </div>

</div>
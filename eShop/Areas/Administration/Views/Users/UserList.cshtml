                                                <td class="align-middle">
                                                    <div class="text-center ">
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "mx-2 btn btn-outline-success mb-sm-1" })
                                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "mx-2 btn btn-outline-secondary mb-sm-1" })
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "mx-2 btn btn-outline-danger mb-sm-1" })
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </table>
                            </div><!--//table-responsive-->
                        </div><!--//app-card-body-->
                    </div><!--//app-card-->
                </div><!--//tab-pane-->

                <div class="tab-pane fade" id="orders-pending" role="tabpanel" aria-labelledby="orders-pending-tab">

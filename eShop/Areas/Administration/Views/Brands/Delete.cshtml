@model FurnitureShop.Areas.Administration.Data.BrandsViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Brand</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.brand_id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.brand_id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.brand_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.brand_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.brand_img)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.brand_img)
            @if (Model.brand_img != null)
            {
                <img src="@Url.Content(Model.brand_img)" alt="@Model.brand_img" width="200" height="200" />
            }
            else
            {
                <span>No Image</span>
            }

        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

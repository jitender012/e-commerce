@model FurnitureShop.Areas.Customer.Data.CheckoutModel
@{    
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<style>
    .parent {
        background-color: #f1f3f6;
        width: 100%;
        height: 100vh;
    }

    .content-div {
        width: 90%;
    }

    .r-box {
        background-color: white;
        box-shadow: 0px 1px 2px 0px #a0a0a08c;
        padding: 20px;
    }
    .n-box {
        background-color: #f1f3f6;
        color: cornflowerblue;
        padding: 0px 7px 2px 7px;
        height: 26px;
        position: absolute;
        font-size:14px;
    }
   
</style>
<div class="parent">
    <div class="container-fluid content-div">
        <div class="row py-3">
            <div class="col-8 px-2">
                <div class="r-box d-flex flex-wrap justify-content-between mb-3">
                    <div class="d-flex">
                        <div>
                            <p class="n-box">1</p>
                            <div class="ml-5">
                                <p>Login</p>
                                @Model.userName @Model.mobile
                            </div>

                        </div>

                    </div>
                    <div><button class="btn btn-default" style="color:cornflowerblue">Change</button></div>

                </div>
                <div class="r-box d-flex flex-wrap justify-content-between  mb-3">
                    <div class="d-flex">
                        <div>
                            <p class="n-box">2</p>
                            <div class="ml-5" style="max-width:500px">
                                <p>DELIVERY ADDRESS</p>
                               @Model.address
                            </div>

                        </div>

                    </div>
                    <div><button class="btn btn-default" style="color:cornflowerblue">Change</button></div>

                </div>
                <div class="r-box d-flex flex-wrap justify-content-between mb-3">
                    <div class="d-flex">
                        <div>
                            <p class="n-box">3</p>
                            <div class="ml-5" style="max-width:500px">
                                <p>ORDER SUMMARY</p>
                                HTTP response to send back to the client. This response may include a redirect to a confirmation page.
                            </div>

                        </div>

                    </div>
                    <div><button class="btn btn-default" style="color:cornflowerblue">Change</button></div>

                </div>
                <div class="r-box d-flex flex-wrap justify-content-between mb-3">
                    <div class="d-flex">
                        <div>
                            
                            <div class="ml-5" style="max-width:500px">
                            
                                HTTP response to send back to the client. This response may include a redirect to a confirmation page.
                            </div>

                        </div>

                    </div>
                    <div><button class="btn btn-danger" >CONTINUE</button></div>

                </div>
            </div>
            <div class="col-4 px-2">
                <div class="r-box ">
                    <div class="">
                        PRICE DETAILS
                        <hr />
                    </div>
                    <div class="d-flex flex-wrap justify-content-between">

                        <p>Price (1 item)</p>
                        <p>₹9,999</p>

                    </div>
                    <hr />
                    <div class="d-flex flex-wrap justify-content-between">
                        <p><b>Total Payable</b></p>
                        <p><b>₹9,9999</b></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>





